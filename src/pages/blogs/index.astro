---
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import CardBlog from "../../components/CardBlog.astro";
import Layout from "../../layouts/Layout.astro";


const blogPosts: CollectionEntry<"blogs">[] = (await getCollection("blogs")).sort(
  (a: CollectionEntry<"blogs">, b: CollectionEntry<"blogs">) =>
    b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const otherPosts: CollectionEntry<"blogs">[] = blogPosts.slice();
const title: string =
  "Hikvision supplier Dubai|Hikvision CCTV dealer in Dubai";
---

<Layout title={title}>
<div class="flex flex-col">
<div class="relative w-full"> 
<div class="container z-1">
<div class="grid grid-cols-12 mx-auto sm:grid-cols-12 md:grid-cols-12 lg:grid-cols-12 xl:grid-cols-12 gap-4 mb-4 justify-center">
<div class="col-span-12 sm:col-span-12  md:col-span-12 lg:col-span-12 xl:col-span-12 "> 
<div class=" w-full relative mb-10"> 
<div class="flex-auto p-4"> 
<div class="text-center mt-10"> 
    <!-- <h4 class="my-1 font-semibold text-[30px] md:text-[40px]  mb-5 leading-12">Blogs</h4> -->
    <h4 class="text-white font-semibold text-[30px] md:text-[40px] ">Latest blogs from <br>  Lovosis Technology Dubai</h4>
</div> 
</div>  
</div> 
</div> 


<div class="col-span-12 sm:col-span-12  md:col-span-12 lg:col-span-8 xl:col-span-12 mx-auto ">
<div class="bg-white   rounded-2xl shadow-2xl w-full relative p-4 mb-4 ">
    <div class="flex justify-between">                                    
        <p class="">
            <span class="font-medium border-b border-dashed border-pink-400">Latest Posts </span>
        </p>
        <p class="">
            <span class="font-medium">Today </span>: 21 Augest 2023
        </p>
    </div>
    {otherPosts.map((blogEntry) => <CardBlog blogEntry={blogEntry} />)} 

</div>
</div>
</div>
</div>
</div>
</div>
</Layout>