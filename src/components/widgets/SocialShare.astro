  name: string;
  url: string;
  svg: string;
};

const socialPlatforms: SocialPlatform[] = [
  {
    name: "Facebook",
    url: `https://www.facebook.com/share.php?u=${Astro.url}&title=${pageTitle}`,
    svg: `<svg
          role="img"
          viewBox="0 0 24 24"
          stroke="currentColor"
          class="size-4 flex-shrink-0 fill-current"
          ><title>Facebook</title><path
